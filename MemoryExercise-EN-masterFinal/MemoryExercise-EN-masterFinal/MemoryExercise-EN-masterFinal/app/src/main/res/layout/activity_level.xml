<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/levelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="SELECT LEVEL"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#7B68EE"
            />
        <Button

            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="Level 1"
            android:textStyle="bold"
            android:textSize="50dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textColor="#4682B4"
            android:background="@drawable/btn_bg_ex"
            android:id="@+id/level1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

        <Button
            android:layout_below="@id/level1"
            android:layout_centerHorizontal="true"
            android:id="@+id/level2"
            android:text="Level 2"
            android:textStyle="bold"
            android:textSize="50dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textColor="#4682B4"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_bg_ex"
            android:scaleType="fitXY"/>
        <Button
            android:src="@drawable/level3"
            android:layout_below="@+id/level2"
            android:id="@+id/level3"
            android:text="Level 3"
            android:textStyle="bold"
            android:textSize="50dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textColor="#4682B4"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_ex"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/level4"
            android:layout_centerHorizontal="true"
            android:text="Level 4"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="#4682B4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/level3"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_bg_ex"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/level2"
            android:layout_alignEnd="@+id/level1"
            android:layout_alignRight="@+id/level1"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/level1Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/level3"
            android:layout_alignEnd="@+id/level2"
            android:layout_alignRight="@+id/level2"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/level2Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/level4"
            android:layout_alignEnd="@+id/level3"
            android:layout_alignRight="@+id/level3"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/level3Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignEnd="@+id/level4"
            android:layout_alignRight="@+id/level4"
            android:layout_alignBottom="@+id/level4"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/level4Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageButton
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/home"
        android:background="#00ff0000"
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/levelLayout"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
